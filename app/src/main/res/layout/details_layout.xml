<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.innotest.DetailsFragment">

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/return_icon"
        android:backgroundTint="@null"
        android:contentDescription="@string/return_button"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp">

    </ImageButton>

    <ImageButton
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:background="@drawable/download_button"
        android:layout_marginBottom="24dp">

    </ImageButton>

    <ImageButton
        android:id="@+id/bookmark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bookmark_selector"
        >

    </ImageButton>

    <TextView
        android:id="@+id/photographer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="CJCB"
        android:fontFamily="@font/mulish_font"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginStart="121dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/return_button"
        app:layout_constraintTop_toTopOf="@id/return_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photographer_name"
        app:layout_constraintBottom_toTopOf="@id/download_button"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/photo_view">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
